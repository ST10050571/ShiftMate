<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#404040"
    android:visibility="gone">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ShiftMateLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        tools:ignore="HardcodedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_constraintTop_toTopOf="@id/logoImageView"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/navDrawerIcon"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/todo1"
        android:src="@drawable/ic_nav_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toEndOf="@+id/logoImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        tools:ignore="HardcodedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_constraintTop_toTopOf="@id/logoImageView"
        android:layout_marginTop="124dp"
        android:text="Welcome back!"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView1"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="@string/quaterly_report"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationTextView1"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="12 Hours"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/nameTextView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="UX/UI Design"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationTextView2"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="32 Hours"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:progressTint="#34C13A" />

    <TextView
        android:id="@+id/nameTextView3"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="Project X "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationTextView3"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="24 Hours"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/nameTextView4"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="File Invoices"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationTextView4"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="2 Hours"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/nameTextView5"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="Team Project"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationTextView5"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/brawler"
        android:text="6 Hours"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBar5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:progressDrawable="@drawable/progress_bar" />


</LinearLayout>
