<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">


    <Button
        android:id="@+id/registerButton"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="Back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="638dp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="Enter Focus Session"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="634dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:background="#1E3848"
        android:backgroundTint="#1E3848"
        android:fontFamily="@font/brawler"
        android:hint="Project X Details"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="137dp" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:pointerIcon="arrow"
        android:progress="50"
        android:progressBackgroundTint="#FF9800"
        android:progressTint="#FF9800"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="373dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:hint="Time Spent on Task"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="459dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:hint="1,5 hrs"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:hint="Completion Status"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:backgroundTint="#FEFEFE"
        android:hint="Description: "
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="258dp" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:pointerIcon="arrow"
        android:progress="22"
        android:progressBackgroundTint="#D50000"
        android:progressTint="#D50000"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="506dp" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ShiftMateLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_constraintTop_toTopOf="@id/logoImageView"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="221dp"
        android:layout_height="44dp"
        android:backgroundTint="#FEFEFE"
        android:buttonTint="#FEFEFE"
        android:checked="false"
        android:fontFamily="@font/brawler"
        android:text="Task Completed"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="570dp" />

</androidx.constraintlayout.widget.ConstraintLayout>