<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">

    <Button
        android:id="@+id/registerButton"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="Back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="638dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:background="#1E3848"
        android:backgroundTint="#1E3848"
        android:fontFamily="@font/brawler"
        android:hint="Chat Room"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_constraintTop_toTopOf="@id/logoImageView"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ShiftMateLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:background="@color/white"
        android:fontFamily="@font/brawler"
        android:text="Type Message..."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="562dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="59dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_editor_absoluteX="334dp"
        tools:layout_editor_absoluteY="563dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="273dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="6dp"
        android:backgroundTint="#E0F2F1"
        android:fontFamily="@font/brawler"
        android:text="Sam: Hi team, I hope you are all well. Remember our meeting time is for 14:00 today."
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="272dp"
        android:layout_height="99dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#E0F2F1"
        android:fontFamily="@font/brawler"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        android:text="Sandile: Sorry team, but I am unavailable for the meeting today. Jacob has all the information I needed to share."
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="310dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#E0F2F1"
        android:fontFamily="@font/brawler"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:text="Jacob: Enjoy the holiday Sandile! See you next week."
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="407dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="273dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#E0F2F1"
        android:fontFamily="@font/brawler"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:text="You: Hebana, already on holiday?? We just back 2 weeks ago."
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="460dp" />

</androidx.constraintlayout.widget.ConstraintLayout>