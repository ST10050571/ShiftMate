<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">

    <Button
        android:id="@+id/taskSaveBut"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameTextView"
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="1dp"
        android:background="#1E3848"
        android:backgroundTint="#1E3848"
        android:fontFamily="@font/brawler"
        android:hint="Chat Room"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/shiftmatelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:fontFamily="@font/brawler"
        android:text="Type Message..."
        app:layout_constraintBottom_toTopOf="@+id/taskSaveBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ScrollView
        android:layout_width="295dp"
        android:layout_height="279dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="279dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/chatTextView1"
                android:layout_width="273dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingLeft="6dp"
                android:text="Sam: Hi team, I hope you are all well. Remember our meeting time is for 14:00 today."
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="240dp" />

            <TextView
                android:id="@+id/chatTextView2"
                android:layout_width="271dp"
                android:layout_height="87dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:text="Sandile: Sorry team, but I am unavailable for the meeting today. Jacob has all the information I needed to share."
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/chatTextView3"
                android:layout_width="274dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:text="Jacob: Enjoy the holiday Sandile! See you next week."
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="407dp" />

            <TextView
                android:id="@+id/chatTextView4"
                android:layout_width="273dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:text="You: Hebana, already on holiday?? We just back 2 weeks ago."
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="460dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>