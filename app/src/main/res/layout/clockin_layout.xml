<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/shiftmatelogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="406dp"
            android:layout_height="77dp"
            android:layout_marginEnd="5dp"
            android:background="#1E3848"
            android:backgroundTint="#1E3848"
            android:fontFamily="@font/brawler"
            android:hint="Clock-in"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.177" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="389dp"
            android:layout_height="467dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <EditText
                            android:id="@+id/clockInEmailEditText"
                            android:layout_width="204dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#FEFEFE"
                            android:fontFamily="@font/brawler"
                            android:hint="Email Address"
                            android:inputType="textEmailAddress"
                            android:minHeight="48dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.077"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.613" />

                        <EditText
                            android:id="@+id/clockInLocEditText"
                            android:layout_width="204dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#FEFEFE"
                            android:fontFamily="@font/brawler"
                            android:hint="Location"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.077"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.701" />

                        <EditText
                            android:id="@+id/clockInTimeEditText"
                            android:layout_width="119dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#FEFEFE"
                            android:fontFamily="@font/brawler"
                            android:hint="Time"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.054"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.516" />

                        <EditText
                            android:id="@+id/clockInDateEditText"
                            android:layout_width="188dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FEFEFE"
                            android:fontFamily="@font/brawler"
                            android:hint="Date (yyyy/MM/dd)"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.054"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.434" />


                        <CalendarView
                            android:id="@+id/calendarView"
                            android:layout_width="296dp"
                            android:layout_height="288dp"
                            android:background="#F9F9F9"
                            android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.969"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.392" />


                </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/verifyBut"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:backgroundTint="#1D364A"
            android:fontFamily="@font/brawler"
            android:text="Verify"
            android:textColor="#FFEBEE"
            android:textColorLink="#FFEBEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.296" />

        <Button
            android:id="@+id/clockInBut"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:backgroundTint="#1D364A"
            android:fontFamily="@font/brawler"
            android:text="Clock-in"
            android:textColor="#FFEBEE"
            android:textColorLink="#FFEBEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/clockInBackBut"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:backgroundTint="#1D364A"
            android:fontFamily="@font/brawler"
            android:text="Back"
            android:textColor="#FFEBEE"
            android:textColorLink="#FFEBEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
