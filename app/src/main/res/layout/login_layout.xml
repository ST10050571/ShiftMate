<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toTopOf="@id/emailEditText"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="#991F394A"
        android:contentDescription="TODO"
        android:src="@drawable/ShiftMateLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_constraintTop_toBottomOf="@id/logoImageView"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:autofillHints=""
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/brawler"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:layout_constraintTop_toBottomOf="@id/emailEditText"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/brawler"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="378dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="295dp"
        android:layout_height="62dp"
        android:layout_constraintTop_toBottomOf="@id/passwordEditText"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#F21D364A"
        android:fontFamily="@font/brawler"
        android:text="@string/login"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="590dp" />

    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@id/loginButton"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:text="@string/don_t_have_an_account_register"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="680dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="50dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>

